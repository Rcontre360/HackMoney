{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "compiler-version": [
      "error",
      ">=0.8.4"
    ],
    "constructor-syntax": "error",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "reason-string": [
      "error",
      {
        "maxLength": 64
      }
    ],
    "avoid-suicide": "error",
    "avoid-sha3": "warn"
  }
}
